{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "comment": "Validate context files match template structure and naming convention",
            "command": "python .claude\\hooks\\validate-context.py"
          },
          {
            "type": "command",
            "comment": "Validate plan files match template structure and naming convention",
            "command": "python .claude\\hooks\\validate-plan.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write.*\\.(ts|tsx|js|jsx)|Edit.*\\.(ts|tsx|js|jsx)",
        "hooks": [
          {
            "type": "command",
            "comment": "Auto-format TypeScript/JavaScript files with Prettier",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATHS\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "comment": "Remind about active plans with in_progress phases that need updating",
            "command": "python .claude\\hooks\\plan-update-reminder.py"
          }
        ]
      }
    ]
  }
}
